//gives the user the output for sin(x) where x=0.1, 0.3, 0.5, 0.7, 0.9 using Taylor series expansion (calculation upto seven terms)

#include <stdio.h>
#include <math.h>

int main() {
    int i=1;
    float sum,term,x,error=1.e-12;
  
for(x=0.1;x<0.91;x+=0.2)  
    { 
        term=x;
        sum=0.;
        i=1;
        while(i<=7 && fabs(term)>error)
            {
                sum=term+sum;
                term=(-term*(pow(x,2.)))/((2*i)*(2*i+1));
                i++;
            }
        
        printf("%.5f\n",sum);
    }
    return 0;
}
