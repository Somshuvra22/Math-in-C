#include <stdio.h>

void main(){
    int n,i,j,a, x[20];
    printf("The number of numbers(<=20): ");
    scanf("%d",&n);

    for(i=0;i<n;i++){
        printf("Number %d: ",i+1);
        scanf("%d",&x[i]);
    }
    
    for(i=0;i<n;i++){
        for(j=i+1;j<n;j++){
            if (x[i]>x[j]){
                a=x[i];
                x[i]=x[j];
                x[j]=a;
            }
        }
    }
    printf("The largest number is: %d \n",x[n-1]);
    printf("The smallest number is: %d ",x[0]);
}
