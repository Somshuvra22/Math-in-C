##Input the value of x and the code outputs the value of sin(x) through the Taylor series expansion formula

#include <stdio.h>

void main(){

    float term,sum=0.,x,error=10.e-6,v;
    int i=1;

    printf("Enter x: ");
    scanf("%f", &x);

    term=x;

    while(fabs(term)>error){

        sum=sum+term;
        v=(2.*i)*(2.*i+1.);
        term=(-term*pow(x,2))/v;
        i++;
    }
    printf("sin(x)= %.3f",sum);
}
